<%- include('aufgabe.ejs',{}) %>
<%- include('../../../../../../../layouts/partials/ergebnis.ejs') %>


<script type="module">
    import {tabulate} from '/modules/tabulate.mjs'
    import {canvas} from '/modules/canvas.mjs'
    import {populate} from '/modules/populate.mjs'
    import {vW} from '/d3/lib/Betriebsmittel/vW.mjs'

    // tabelle ergebnis
    const data=await populate( "http://localhost:8000/json/example/beispiel12.json" )
    tabulate( data,"single","#ergebnis" )

    // Rückkopplung
    const tab=d3.selectAll( 'tbody' ).selectAll( 'tr' )._groups[ 0 ][ 0 ].innerText.split( '\t' );
    l.value=tab[ 0 ]
    d.value=tab[ 1 ]
    R.value=tab[ 2 ]

    // svg grafik
    const g=canvas( 800,100,'#grafik' )

    const dataW=[ {
        'opacity': j.Betriebsmittel.Visual.opacity,
        'x': j.Betriebsmittel.Visual.x,
        'y': j.Betriebsmittel.Visual.y,
        'height': j.Betriebsmittel.Visual.height,
        'width': j.Betriebsmittel.Visual.width,
        'text': [
            "W1",
            `l = ${ j.Parameter.l }`,
            `d = ${ j.Parameter.d }`,
            `R = ${ j.Parameter.R }`,
            `ρ= ${ j.Ergebnis.ρ.value } ${ j.Ergebnis.ρ.unit }`
        ]
    }
    ]

    g.append( () => vW( dataW ) )

</script>
