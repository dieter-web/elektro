<%- include('aufgabe.ejs',{}) %>

<div class="container text-left">
    <div class="row">
        <div class="col">
            <div class="bg-secondary">
                <!-- Platzhalter für table -->
                <table class="table table-bordered" id="ergebnis"></table>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="bg-secondary">
                <!-- Platzhalter für svg -->
                <svg id="grafik"></svg>
            </div>
        </div>
    </div>
</div>

<script type="module">
    import {tabulate} from '/modules/tabulate.mjs'
    import {canvas} from '/modules/canvas.mjs'

    import {vW} from '/d3/lib/Betriebsmittel/vW.mjs'

    const j=await d3.json( "http://localhost:8000/json/example/beispiel12.json" )

    const g=canvas( 800,100,'#grafik' )

    const datatable=[ {
        "l": j.Parameter.l,
        "d": j.Parameter.d,
        "R": j.Parameter.R,
        'ρ': j.Ergebnis.ρ.value+j.Ergebnis.ρ.unit
    } ]

    // tabelle füllen
    tabulate( datatable,[ 'l','d','R','ρ' ],"#ergebnis" )

    // canvas füllen
    const dataW=[ {
        'opacity': 0.25,
        'x': 50,
        'y': 50,
        'height': 5,
        'width': 600,
        'text': [
            "W1",
            "l = 3 km",
            "d = 0.9 mm",
            "R = 84.5 ohm"
        ]
    }
    ]

    g.append( () => vW( dataW ) )


    // Schleife für das Einfügen von geänderten Werten im Formular
    const tab=d3.selectAll( 'tbody' ).selectAll( 'tr' )._groups[ 0 ][ 0 ].innerText.split( '\t' );
    l.value=tab[ 0 ]
    d.value=tab[ 1 ]
    R.value=tab[ 2 ]

</script>
