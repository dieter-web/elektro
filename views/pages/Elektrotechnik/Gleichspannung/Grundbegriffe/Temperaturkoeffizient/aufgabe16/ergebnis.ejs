<%- include('aufgabe.ejs',{}) %>
<%- include('../../../../../../layouts/partials/ergebnis.ejs') %>

<script type="module">
    import {populate} from '/modules/populate.mjs'
    import {tabulate} from '/modules/tabulate.mjs'
    import {canvas} from '/modules/canvas.mjs'
    import {vR} from '/d3/lib/Betriebsmittel/vR.mjs'

    // tabelle ergebnis
    const data=await populate( "http://localhost:8000/json/example/aufgabe16.json" )
    const material=await populate( "http://localhost:8000/json/Tafel11.json" )

    tabulate( data,"#ergebnis" )

    // RÃ¼ckkopplung
    Material.value=d3.selectAll( 'tbody' ).selectAll( 'tr' )._groups[ 0 ][ 0 ].innerText.split( '\t' )[ 0 ];

    // svg grafik
    const g=canvas( '#grafik',800,200 )

    let gdata=[ {
        width: 100,
        height: 100,
        text: Material.value,
        color: material[ `${ Material.value }` ].color,
        style: 'stroke:#0fff; stroke-width:1.0',
        fillopacity: 0.5
    } ]

    g.symbols.append( () => vR( gdata,[ 30,30 ] ) )

</script>
